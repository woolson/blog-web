@require "global"

.content-body__header
  background: $background-gray

.content-body__header_contact
  i
    color: $font-color

.message
  display: block
  .message-list
    height: auto
    .node-item
      text-align: center !important
      padding: 0 !important
      > div
        animation: none !important
    .node-item__content
      width: 95vw
      border-radius: 5px !important
      max-width: 100vw !important
      margin-bottom: 10px
  .send
    button
      text-align: center

.home-page
  img
    width: 90vw

.about
  display: flex
  align-items: center
  justify-content: center
  img
    width: 50vw !important
    animation: rotate 5s linear infinite

.study-list
  ._tab ul
    width: 100%
    li.active
      color: $main-blue !important
  .artical-list
    .study-item
      width: 90% !important
      box-sizing: border-box
      a
        font-size: 1.2rem

::-webkit-scrollbar
  width: 0
  height: 0

@keyframes rotate
  0% {
    transform: rotate(0)
  }
  100% {
    transform: rotate(360deg)
  }
