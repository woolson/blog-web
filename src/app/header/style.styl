.header
  height 100px
  position relative
  overflow hidden
  border-bottom 3px solid $main-blue
  display flex
  justify-content center

.header__nav
  height 50px
  width 100vw
  max-width 900px
  position absolute
  display flex
  justify-content flex-start
  z-index 1000
  bottom 0
  margin 0 auto
  padding 0

.header__nav__item
  a
    display block
    padding 15px 25px
    color $main-blue
    white-space nowrap
    text-decoration none
    text-align center
    i
      margin-right 5px

.header__nav__item--active
  background linear-gradient(45deg, $main-blue, $main-green)
  border-radius 5px 5px 0 0
  a
    color: white

.header__bg
  position absolute
  width 140%
  height 140px
  top -20px
  left -20%
  filter blur(30px)
  z-index 99
  transition all 0.6s

@media screen and (max-width: 760px)
  .header__nav__item
    flex 1
  .header__nav
    left 0
