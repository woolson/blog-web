@require "global"

.life-travels
  flex 1
  display flex
  flex-direction column
  list-style none
  padding 20px
  color $font-color
  overflow auto
  height 100vh
  box-sizing border-box
  animation fadeIn .5s
  .life-travels__item
    padding 15px 10px 10px
    width 100%
    background white
    box-sizing border-box
    border-radius 5px
    max-width 1000px
    margin-bottom 20px
    .life-travels__item_head
      display flex
      align-items baseline
      span
        font-weight bold
      p
        font-size 1.5rem
        padding 10px 10px 10px 0
        display inline-block
        border-right 2px solid $font-color
        margin-bottom 10px
        margin-right 10px
        font-weight bold
    .life-travels__item_img
      height 300px
      width 100%
      background-position center center
      background-size 100%
      transition all .5s
      filter blur(1px)
      &:hover
        filter blur(0)
        background-size 115%
