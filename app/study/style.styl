@require "global"

.study-list
  position relative
  display flex
  ._block-empty
    flex 1
    width 100%
    height 100vh
    flex-direction column
  ._tab
    padding 60px 0

  .artical-list
    padding 20px 10px
    flex 5
    overflow auto
    width 100%
    box-sizing border-box
    display flex
    justify-content flex-start
    align-items flex-start
    flex-direction column
    align-self flex-start
    .study-item
      width 100%
      max-width 1000px
      margin-right 10px
      box-sizing border-box
      padding 10px 20px 20px 20px
      margin-bottom 10px
      background white
      transition 0.3s ease-in-out
      border-radius  0 5px 5px 0
      background-size 2px 100%
      background-repeat no-repeat
      border-left 3px solid $main-blue
      cursor pointer
      &:hover
        box-shadow 5px 5px 10px rgba(black, .05)
        border-left-color rgba($main-blue, .8)
        background linear-gradient(to right, rgba($main-blue, .8), rgba($main-green, .8))
        background-repeat no-repeat
        background-size 100% 100%
        border-radius 5px
        a
          -webkit-text-fill-color white
        .study-content
        .study-tag span
        .study-more
          color white !important
      a
        margin 15px 0
        font-size 1.5rem
        line-height 3.5rem
        color $main-blue
        -webkit-background-clip text
        -webkit-text-fill-color transparent
        background-image linear-gradient(to right, $main-blue, $main-green)
        cursor pointer
        text-decoration none
      .study-content
        font-size 15px
        text-indent 40px
        margin-top 10px
        margin-bottom 10px
        line-height 22px
        color #2D3F50
      .study-tag span
        color darken($border-gray, 20%)
        padding-left 10px
      .study-more
        color $main-green
        &:hover
          text-decoration underline
          cursor pointer
  .artical
    flex 5
    padding 20px 50px 10px 50px
    h2
      text-align center
      color darken($main-blue, 15%)
      margin-bottom 25px
    .artical-date
      font-size 10px
      text-align center
      color #666
    .artical-content
      font-size 16px
      line-height 35px
      text-indent 35px
      color #666
    .button
      text-align center
      a
        width 50px
        height 50px
        line-height 46px
        border-radius 100%
        margin 30px 0
        font-weight bolder
        font-size 17px
        color #999
        background-image none
      a:hover
        color #999

@media screen and (max-width: 765px)
  .study-list
    flex-direction column
    width 100%
    ._block-empty
      height: auto
    ._tab
      height: auto
      padding 5px
      display flex
      li
        width 30px
        height 30px
    .artical-list .study-item
      padding: 10px
      a
        display inline-block
        font-size 1.15rem
        line-height 1.5rem
        margin 10px 0