@require "global"

*
  margin 0
body
  line-height 13px
  font-size 12px
  background #f5f5f5
  label
    cursor pointer
    margin-right 10px
  #container .app
    display flex
    position fixed
    left 0
    height 100vh
    width 100vw
    > div:not(.app-navs)
      flex 1
    .app-content
      width 100%
      display flex
      flex 1
      background-color #F5F5F5
      background-repeat no-repeat
      background-size 35%
      background-position center center
    .app-content__container
      width 100%
      overflow auto
      > div:not(.study-article)
       min-height: 100%


.app-navs
  position relative
  width 250px
  z-index 9

.content-navs_pc
  height 100vh
  display flex
  flex-direction column
  justify-content center
  background linear-gradient(45deg, $main-blue, $main-green)
  box-shadow inset 0 0 10px rgba(0, 0, 0, .2)

.content-navs_pc_info
  display flex
  flex-direction column
  justify-content flex-start
  align-items center
  padding: 60px 0 40px 0
  box-sizing border-box
  height 218px
  img
    width 80px
    height 80px
    border-radius 100%
    border 2px solid white
    box-sizing border-box

.content-navs_pc_nav
  flex: 1
  width 100%
  display flex
  flex-direction column
  justify-content flex-start
  align-items center
  margin 0 auto
  padding 0
  list-style none
  position relative
  color white
  overflow auto
  li
    width 100%
    padding 20px
    line-height 25px
    text-align center
    cursor pointer
    transition font-size .3s
    box-sizing border-box
    font-size 12px
    &.active
      font-size 18px
      text-shadow 0 0 5px rgba(black, .3)
    &.highLight
      position absolute
      left 0
      top 0
      width 150px
      height 65px
      padding 0
      background linear-gradient(to left, rgba(black, .0), rgba(black, .1))
      border-left 5px solid white

.content-navs_mobile
  display: none
  position: relative
  text-align: left
  width 100%
  box-shadow 0 0 10px rgba(0, 0, 0, .2)
  color $main-green
  i
    font-size 22px;
    line-height 28px;
    cursor pointer;
    margin 5px 10px;
  ul
    display none
    width 102vw
    position absolute
    top 40px
    left -1rem
    padding 1rem 0
    margin 0
    list-style none
    border-bottom 1px solid $border-gray
    background rgba($background-gray, .9)
    z-index 9999
    li
      padding 15px
      text-align center

.content-body__header_contact
  i
    color white
    cursor pointer
    font-size 18px
    &:hover
      text-shadow 0 0 5px rgba(black, .5)
  &.mobile
    display inline-block
    position relative
    margin-left auto
    float right
    margin 0.5rem
    i
      font-size 2rem
      margin-right 0 !important
    a
      display inline-block
      height 32px

.content-navs_pc_copyright
  margin auto 0 0 0
  padding 0
  color black
  height 40px
  display block
  width 100%
  line-height 40px
  text-align center
  z-index 9999
  font-size 12px
  opacity 0.15

@media screen and (max-width: 1000px)
  .app-navs
    width: 100px
  .content-navs_pc_nav
    .highLight
      width: 100px !important
  .content-navs_pc_copyright
    display: none
    
@media screen and (max-width: 765px)
  #container .app
    flex-direction: column
  .app-navs
    width 100vw
  .app-content__container
    overflow hidden !important
    display flex
    > div
      width 100%
  .content-navs_mobile
    display inline-block
  .content-navs_pc
    display none