full-screen()
  position: fixed
  left: 0
  top: 0
  width: 100%
  height: 100%
  display: flex
  align-items: center
  justify-content: center

._loading
  full-screen()
  background: #ECE8DE
._loading__text
  text-align: center
  font-size: 1.2rem
  margin: 0
  position: relative
  top: -110px

._loading-plain
  margin: 0
  text-align: center
  padding: 20px 0

._loading-blur
  full-screen()
  background: rgba(0, 0, 0, 0.65)
  z-index: 999999
  img
    width: 64px !important
  ._loading-blur__text
    font-size: 1.2rem
    padding: 20px 0
    color: white

._loading-bubble
  height: 100%
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%
  background: rgba(0,0,0,0.15)
  z-index: 9
  ._loading-bubble__content
    height: 100%
    display: flex
    align-items: center
    img
      width: 55px
      margin: 0 auto

._loading-block
  width: 100%
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  p
    margin-top: 10px
